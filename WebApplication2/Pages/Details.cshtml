@page
@model WebApplication2.Pages.RecipePages.DetailsModel

@{
    ViewData["Title"] = "- Details";
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Details</title>
</head>
<body>

<div>
    <h4>Recipe</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.CookingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.CookingTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Portions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Portions)
        </dd>

        <dt class="col-sm-2">
            Ingredients
        </dt>
        <dd class="col-sm-10"></dd>

        @foreach (var item in Model.Ingredient)
        {
            <dt class="col-sm-2">

            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.Count)
                @Html.DisplayFor(modelItem => item.Unit)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Instructions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Instructions)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="./Details" asp-page-handler="SaveXml" asp-route-id="@Model.Recipe.Id">Download XML</a>
</div>
</body>
</html>